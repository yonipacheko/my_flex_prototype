:css
  .wrapper{
    width: 950px;
    margin: auto;
    overflow: hidden;
    border: 1px solid;
  }
  .wrapper .video{

    float: left;
    margin-right: 20px;

  }

  .wrapper .description{
    margin-top: 30px;
  }

  .wrapper .actions{

    overflow: hidden;

  }

  .wrapper .actions li{

    float: left;
    margin-top: 20px;

  }

  .wrapper .actions li:first-child{


    margin-right: 10px;


  }


.wrapper
  .video-container
    .video
      %img(src="#{@video.large_url}")

    .description
      %h3.lead= @video.title
      %p= @video.description
      %ul.actions
        %li
          %a.btn.btn-primary(href="") Watch Now
        %li
          %a.btn(href="") + My Queue
%section.reviews.container
  .row
    .span10.offset1
      = form_for [@video, Review.new ] do |f|

        %fieldset
          %label Rate this video
          = f.select :rating, options_for_select([5, 4, 3, 2, 1].map{ |number| [pluralize(number, 'Star')]})

          %label Write Review
          = f.text_area :content, rows: 6, class: "span6"
        %fieldset.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          = link_to 'Cancel', @video
      %header
        %h3 User Reviews ("#{@reviews.count}")
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .span2
                %span Rating: review.rating
                %p by <a href="">#{review.user.full_name}</a>
              .span8
                %p= review.content


